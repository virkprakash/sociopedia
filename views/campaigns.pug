extends base

block content 
  main.main
    if user.role==='user'
      .add-campaign
        a.btn.btn--green(href='/addCampaign') Add Campaign
      .card-container
          each campaign in confirmedCampaignData
            .card
                .card__header
                    .card__picture
                        .card__picture-overlay
                        
                    h3.heading-tertirary
                        span= campaign.name
                .card__details
                    h4.card__sub-heading=campaign.name 
                    p.card__text=campaign.description
                    .card__data
                      svg.card__icon
                        use(xlink:href='img/icons.svg#icon-map-pin')
                        span=campaign.address
                    .card__data
                      svg.card__icon
                        use(xlink:href='img/icons.svg#icon-calendar')
                        span= campaign.date.toLocaleString('en-us',{month:'long',year:'numeric'})
                    
                    .card__data
                      svg.card__icon
                        use(xlink:href='img/icons.svg#icon-user')
                        span 40 people
